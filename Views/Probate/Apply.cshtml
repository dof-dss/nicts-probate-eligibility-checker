@model eligibility_checker.Models.PageViewModel



@if (Model.Page != "start")
{
    <a href="javascript:history.go(-1)" class="govuk-back-link">Back</a>
}

<h1 class="govuk-heading-l">@Model.Header</h1>

<div id="changed-name-hint" class="govuk-hint">@Html.Raw(Model.Hint)</div>


<a href="@Model.ApplyUrl" id="btnStart" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start" data-module="govuk-button">
    Create your account
    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
    </svg>
</a>

<p class="govuk-body">
    Already registered <a class="govuk-link" href="https://apply-for-probate.nidirect.gov.uk/">Log in</a>.
</p>